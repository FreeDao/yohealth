<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
         
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:buttonStyle">@android:style/Widget.Button</item>  
    </style>

   

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="BaseButton">
       
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
         <item name="android:paddingLeft">10dp</item>
         <item name="android:paddingRight">10dp</item>
    </style>
    
    <style name="baseCustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="SettingHeader">
       <item name="android:gravity">center_vertical</item>
       <item name="android:paddingLeft">10dp</item>
       <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/bg_panel_head</item>
    </style>
    <style name="SettingContent">
       <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
       <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/bg_panel_content</item>
    </style>
     <style name="SettingHeaderText">
        <item name="android:textColor">#676464</item>
    </style>
    
    <style name="SettingItem">
        <item name="android:gravity">center_vertical</item>
       <item name="android:paddingLeft">15dp</item>
       <item name="android:paddingRight">15dp</item>
       <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/bg_panel_foot</item>
    </style>
    <style name="SettingItemText">
      <item name="android:textColor">@color/base_font_color</item>
    </style>
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
       
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
	</style>
	<style name="PageBg">
        <item name="android:background">@drawable/bg</item>
    </style>
    <style name="TitleBg">
        <item name="android:background">@drawable/bg_title_blue</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="TitleText">
        <item name="android:textColor">@color/title_textcolor</item>
        <item name="android:textSize">@dimen/title_textsize</item>
    </style>
     <style name="FormText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_textsize</item>
    </style>
    <style name="FormEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_textsize</item>
         <item name="android:background">#00000000</item>
          <item name="android:paddingBottom">2dp</item>
          <item name="android:gravity">center</item>
    </style>
     <style name="BaseBtn">
        <item name="android:textColor">@color/base_font_color</item>
        <item name="android:textSize">@dimen/title_textsize</item>
        <item name="android:background">@drawable/btn_btn_selector</item>
    </style>
    <style name="RabioButtonSexStyle">
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">3dp</item>
    </style>
    <style name="RabioButtonSex2Style">
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
    </style>
    <style name="RabioButtonKGStyle">
        <item name="android:textColor">@color/base_font_color</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:drawableLeft">@drawable/rb_selector</item>
    </style>
    <style name="RabioButtonBalanceDataViewStyle">
        <item name="android:textColor">@drawable/textcolor_balancedataview_selector</item>
        <item name="android:background">@drawable/rb_balancecolor_selector</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="RabioButtonBalanceChartDateStyle">
        <item name="android:textColor">@drawable/textcolor_chartdate_selector</item>
        <item name="android:background">@drawable/rb_chartdate_selector</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="RabioButtonBalanceChartTypeStyle">
        <item name="android:textColor">@drawable/textcolor_charttype_selector</item>
        <item name="android:background">@drawable/rb_charttype_selector</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="RabioButtonModeLeftStyle">
        <item name="android:textColor">@drawable/textcolor_mode_selector</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="BalanceDataItemHeadTextStyle">
        <item name="android:textColor">@color/base_font_color_blue</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="BalanceDataItemContentTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="BalanceDataItemUnitTextStyle">
        <item name="android:textColor">@color/base_font_color</item>
        <item name="android:textSize">11sp</item>
    </style>
</resources>