<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.vc.cloudbalance.widget.LockableHorizontalScrollView
        android:id="@+id/lockableHorizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/bg_split_f1" />

            <LinearLayout
                android:id="@+id/llFont"
                android:layout_width="200dp"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvHideDate"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:text="2014/05/050"
                        android:textColor="#ffffff"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tvDate"
                        style="@style/BalanceDataItemHeadTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="TextView" />

                     <ImageView
                        android:id="@+id/imgHeadImage"
                        android:layout_width="@dimen/balanceimage_width_height"
                        android:layout_height="@dimen/balanceimage_width_height"
                        android:layout_gravity="center"
                        android:src="@drawable/bg_headimage" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/circleImageView"
                        android:layout_width="@dimen/balanceimage_width_height"
                        android:layout_height="@dimen/balanceimage_width_height"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:border_color="#FFffffff"
                        app:border_width="1dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:background="#ffffff" >
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="1dp" >

                        <TextView
                            android:id="@+id/tvWeightTitle"
                            style="@style/BalanceDataItemHeadTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="体重" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center" >

                                <TextView
                                    android:id="@+id/tvWeight"
                                    style="@style/BalanceDataItemContentTextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="55" />

                                <TextView
                                    android:id="@+id/tvWeightUnit"
                                    style="@style/BalanceDataItemUnitTextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:paddingBottom="5dp"
                                    android:text="kg" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                             
                            style="@style/BalanceDataItemHeadTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="1dp" >

                        <TextView
                            android:id="@+id/tvHeightTitle"
                            style="@style/BalanceDataItemHeadTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="高度" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center" >

                                <TextView
                                    android:id="@+id/tvHeight"
                                    style="@style/BalanceDataItemContentTextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="55" />

                                <TextView
                                    android:id="@+id/tvHeightUnit"
                                    style="@style/BalanceDataItemUnitTextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:paddingBottom="5dp"
                                    android:text="cm" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       
                        android:layout_gravity="center"
                        android:src="@drawable/bg_split_f1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/btndata_margin_left_right"
                   android:layout_marginRight="@dimen/btndata_margin_left_right"
                    android:background="@drawable/btn_del_selector" />
            </LinearLayout>
        </LinearLayout>
    </com.vc.cloudbalance.widget.LockableHorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" >
    </View>

</LinearLayout>