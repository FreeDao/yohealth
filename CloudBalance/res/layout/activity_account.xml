<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" style="@style/PageBg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlTop"
        style="@style/TitleBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_back_selector" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="帐号管理" >
        </TextView>
    </RelativeLayout>

   

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" android:layout_below="@+id/rlTop"
            android:orientation="vertical" >
			<View android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/white" ></View>
            <RelativeLayout
               
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                 >

                <ImageView
                    android:id="@+id/imgSys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_weibo" />

                <Button
                    android:id="@+id/btnSysReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="注册" />
                

                <TextView
                    android:id="@+id/tvSysUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:text="TextView" />

            </RelativeLayout>
            <View android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/white" ></View>
			<RelativeLayout
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp"
                 >

                <ImageView
                    android:id="@+id/imgQQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                     android:layout_centerVertical="true"
                    android:src="@drawable/ico_qq" />

                <Button
                    android:id="@+id/btnQQBind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="绑定" />
                 <Button
                    android:id="@+id/btnQQUnBind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="解绑" />
                
            </RelativeLayout>
            <View android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/white" ></View>
            <RelativeLayout
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp"
                 >

                <ImageView
                    android:id="@+id/imgWB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_weibo" />

                <Button
                    android:id="@+id/btnWBBind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="绑定" />
                <Button
                    android:id="@+id/btnWBUnBind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="解绑" />
            </RelativeLayout>
           <View android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/white" ></View>
           

            <Button
                android:id="@+id/btnLogOut"
                style="@style/BaseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:text="注销" />

           
        </LinearLayout>
  


</RelativeLayout>