<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="@dimen/padding_chartview" >

    <RadioGroup
        android:id="@+id/rbgDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/rb1"
                style="@style/RabioButtonBalanceChartDateStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="周" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/rb2"
                style="@style/RabioButtonBalanceChartDateStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/rb3"
                style="@style/RabioButtonBalanceChartDateStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="季" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/rb3"
                style="@style/RabioButtonBalanceChartDateStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年" />
        </LinearLayout>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/llPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rbgType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rb1"
                    style="@style/RabioButtonBalanceChartTypeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="体重" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rb2"
                    style="@style/RabioButtonBalanceChartTypeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="脂肪" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rb3"
                    style="@style/RabioButtonBalanceChartTypeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI" />
            </LinearLayout>

            
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rb4"
                    style="@style/RabioButtonBalanceChartTypeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:text="肌肉" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rb5"
                    style="@style/RabioButtonBalanceChartTypeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="骨骼" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rb6"
                    style="@style/RabioButtonBalanceChartTypeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_smaller_textsize"
                    android:text="含水率" />
            </LinearLayout>

            
        </LinearLayout>
    </RadioGroup>

</LinearLayout>